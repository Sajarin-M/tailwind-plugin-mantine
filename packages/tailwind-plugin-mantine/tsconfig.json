{
  "compilerOptions": {
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"],
}
